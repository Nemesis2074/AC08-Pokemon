<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_optionA" app:layout_constraintEnd_toEndOf="@+id/button_optionB"
            app:layout_constraintStart_toStartOf="@+id/button_optionB" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button_optionB" tools:text="Opción A"
            android:textAllCaps="false" android:background="@drawable/bg_button" android:textColor="@color/icons"
            android:textSize="@dimen/font_button"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_optionB" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" tools:text="Opción B"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false" android:background="@drawable/bg_button" android:textColor="@color/icons"
            android:textSize="@dimen/font_button"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_optionC" app:layout_constraintStart_toStartOf="@+id/button_optionB"
            app:layout_constraintEnd_toEndOf="@+id/button_optionB" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_optionB" tools:text="Opción C"
            android:textAllCaps="false" android:background="@drawable/bg_button" android:textColor="@color/icons"
            android:textSize="@dimen/font_button"/>

</android.support.constraint.ConstraintLayout>